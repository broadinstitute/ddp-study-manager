<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="UPS_history" author="pegah">
        <addColumn tableName="ddp_kit">
            <column name="kit_shipping_history" type="VARCHAR(3000)"></column>
        </addColumn>
        <addColumn tableName="ddp_kit">
            <column name="kit_return_history" type="VARCHAR(3000)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="carrier_per_study_key" author="pegah">
        <addColumn tableName="ddp_instance">
            <column name="carrier_username" type="VARCHAR(100)"></column>
        </addColumn>
        <addColumn tableName="ddp_instance">
            <column name="carrier_password" type="VARCHAR(100)"></column>
        </addColumn>
        <addColumn tableName="ddp_instance">
            <column name="carrier_accesskey" type="VARCHAR(100)"></column>
        </addColumn>
        <addColumn tableName="ddp_instance">
            <column name="carrier_tracking_url" type="VARCHAR(500)"></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
