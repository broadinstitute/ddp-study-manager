<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="defaultColumns" author="ikhaladz" >
        <addColumn tableName="instance_settings">
            <column name="default_columns" type="VARCHAR(1000)"
                    afterColumn="study_specific_statuses" />
        </addColumn>
    </changeSet>

    <changeSet id="RGPdefaultColumns" author="ikhaladz" >
        <update tableName="instance_settings">
            <column name="default_columns" value="[{&quot;value&quot;:&quot;REALM&quot;},{&quot;value&quot;:&quot;SHORT_ID&quot;},{&quot;value&quot;:&quot;ENROLLMENT_STATUS&quot;}]"/>
            <where>study_guid = 'RGP'</where>
        </update>
    </changeSet>

</databaseChangeLog>