# required for medical records and mailingList
ALTER TABLE `ddp_medical_record`
ADD COLUMN `duplicate` TINYINT(1) NULL DEFAULT NULL AFTER `unable_obtain`;

ALTER TABLE `ddp_kit`
ADD COLUMN `receive_date` BIGINT(20) NULL DEFAULT NULL AFTER `message`;

ALTER TABLE `ddp_instance`
CHANGE COLUMN `is_medical` `medical_record_activated` TINYINT(1) NOT NULL ,
ADD COLUMN `kit_request_activated` TINYINT(1) NOT NULL AFTER `billing_reference`;

ALTER TABLE `ddp_instance`
DROP COLUMN `token_role`;

ALTER TABLE `ddp_instance`
ADD COLUMN `has_mailing_list` TINYINT(1) NOT NULL AFTER `medical_record_activated`;

