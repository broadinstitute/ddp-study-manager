<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="ikhaladz" id="postalServiceCredentials">
        <createTable tableName="postal_service_credentials">
            <column autoIncrement="true" name="postal_service_credentials_id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="ddp_instance_id" type="INT">
                <constraints nullable="false"
                             foreignKeyName="postal_service_ddp_instance_fk"
                             references="ddp_instance(ddp_instance_id)"
                             unique="true"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="accesskey" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>